<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".food_shop.RecipeSpActivity">
    <ImageView
        android:src="@drawable/pic_test_1"
        android:id="@+id/recipe_sp_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <ScrollView
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:text="奥尔良鸡肉"
                android:id="@+id/recipe_sp_taocan_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/recipe_sp_bf"
                    android:text="早餐"
                    android:textColor="@color/food_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/recipe_sp_ln"
                    android:textColor="@color/food_gray"
                    android:text="午餐"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/recipe_sp_dn"
                    android:textColor="@color/food_gray"
                    android:text="晚餐"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/yuanjiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_margin="15dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <ImageView
                            android:id="@+id/carbohydrate_pic1"
                            android:src="@drawable/home_page_pic3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/recipe_sp_tshhw"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/carbohydrate_pic1"
                            android:layout_marginLeft="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="碳水化合物"/>
                        <TextView
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="153克"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <ImageView
                            android:src="@drawable/home_page_pic1"
                            android:id="@+id/protein_pic1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/recipe_sp_dbz"
                            android:gravity="center"
                            android:layout_toRightOf="@+id/protein_pic1"
                            android:layout_marginLeft="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="蛋白质"/>
                        <TextView
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="2553克"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">
                        <ImageView
                            android:src="@drawable/home_page_pic2"
                            android:id="@+id/fat_pic1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                        <!--android:src="@drawable/ic_launcher_foreground"/>-->
                        <TextView
                            android:gravity="center"
                            android:layout_toRightOf="@+id/fat_pic1"
                            android:layout_marginLeft="9dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="脂肪"/>
                        <TextView
                            android:id="@+id/recipe_sp_zf"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="74克"/>

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:background="@drawable/yuanjiao"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:text="食材"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#22000000"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recipe_sp_yingyang"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
            <WebView
                android:id="@+id/recipe_sp_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </WebView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>