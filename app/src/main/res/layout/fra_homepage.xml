<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:background="@color/main_nv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/main_nv"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="33dp"
                android:layout_marginLeft="55px"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="40dp"
                    android:text="新品推荐"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
                <TextView
                    android:text="奥尔良鸡胸肉套餐"
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <LinearLayout
                    android:clipChildren="false"
                    android:orientation="horizontal"
                    android:id="@+id/home_page_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--这里面等待从后端获取照片，添加image view作为填充图-->
                    <androidx.viewpager.widget.ViewPager
                        android:clipChildren="false"
                        android:id="@+id/food_pic"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_height="wrap_content">
                    </androidx.viewpager.widget.ViewPager>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginLeft="55px"
                android:layout_marginRight="55px"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:text="每日所需营养素"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="5dp"
                    android:text="更新于11/8"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
                <LinearLayout
                    android:background="@drawable/homapage_yuanjiao"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_margin="15dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                            <ImageView
                                android:id="@+id/carbohydrate_pic"
                                android:src="@drawable/home_page_pic3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <!--android:src="@drawable/ic_launcher_foreground"/>-->
                            <TextView
                                android:gravity="center"
                                android:layout_toRightOf="@+id/carbohydrate_pic"
                                android:layout_marginLeft="9dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="碳水化合物"/>
                            <TextView
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="153克"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                            <ImageView
                                android:src="@drawable/home_page_pic1"
                                android:id="@+id/protein_pic"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <!--android:src="@drawable/ic_launcher_foreground"/>-->
                            <TextView
                                android:gravity="center"
                                android:layout_toRightOf="@+id/protein_pic"
                                android:layout_marginLeft="9dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="蛋白质"/>
                            <TextView
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="2553克"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                            <ImageView
                                android:src="@drawable/home_page_pic2"
                                android:id="@+id/fat_pic"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                            <!--android:src="@drawable/ic_launcher_foreground"/>-->
                            <TextView
                                android:gravity="center"
                                android:layout_toRightOf="@+id/fat_pic"
                                android:layout_marginLeft="9dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="脂肪"/>
                            <TextView
                                android:gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="74克"/>

                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#F83A51"
                        android:gravity="center"
                        android:text="立刻免费测量"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:src="@drawable/homepage_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="今日食谱"
                        android:textSize="24dp"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textColor="#F83A51"
                            android:gravity="center"
                            android:text="定制私人配餐"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />
                        <ImageView
                            android:src="@drawable/homepage_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>